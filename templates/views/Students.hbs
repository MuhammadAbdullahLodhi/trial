                <th>Reg-No</th>
                <th>STD-ID</th>
                <th>Department</th>
                <th>Degree</th>
                </tr>
                {{#each std}}
                <tr>
                  <td id="h">{{this.firstname}} {{this.lastname}}</td>
                  <td>{{this.email}}</td>
