<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title>Registeration - Library Management System</title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;500;700&display=swap" rel="stylesheet" />
  <style>
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
      font-family: 'Poppins', sans-serif;
    }

    body {
      background: url(./css/image/UAPLIB.jpg) no-repeat center center fixed;
      background-size: cover;
      display: flex;
      justify-content: center;
      align-items: center;
      min-height: 100vh;
    }

    .form-box {
      width: 100%;
      max-width: 550px;
      background: rgba(0, 0, 0, .3);
      border-radius: 1.5rem;
      padding: 2.5rem;
      backdrop-filter: blur(10px);
      box-shadow: 0 8px 32px rgba(0, 0, 0, 0.25);
      position: relative;
      overflow: hidden;
      margin-top: 7vw; /* ðŸ‘ˆ Move the form down */
    }
    

    .button-box {
      display: flex;
      justify-content: space-between;
      background-color: rgba(255, 255, 255, 0.15);
      border-radius: 2rem;
      overflow: hidden;
      position: relative;
      margin-bottom: 2rem;
      height: 50px;
    }

    .toggle-btn {
      flex: 1;
      background: transparent;
      border: none;
      outline: none;
      font-size: 1rem;
      color: white;
      cursor: pointer;
      z-index: 2;
      position: relative;
      transition: color 0.3s ease;
    }

    #btn {
      position: absolute;
      height: 100%;
      width: 50%;
      background: #F3C693;
      border-radius: 2rem;
      transition: 0.4s ease;
      z-index: 1;
    }

    form {
      display: none;
      flex-direction: column;
      gap: 1.2rem;
    }

    form.active {
      display: flex;
      animation: fadeIn 0.4s ease-in-out;
    }

    @keyframes fadeIn {
      from { opacity: 0; transform: translateY(10px); }
      to { opacity: 1; transform: translateY(0); }
    }

    .input-field {
      background: transparent;
      border: none;
      border-bottom: 2px solid rgba(255, 255, 255, 0.5);
      padding: 0.8rem 0;
      font-size: 1rem;
      color: white;
      width: 100%;
      transition: border-color 0.3s ease;
    }

    .input-field::placeholder {
      color: rgba(255, 255, 255, 0.7);
    }

    .input-field:focus {
      border-bottom: 2px solid #F3C693;
      outline: none;
    }

    .submit-btn {
      padding: 0.8rem;
      background: #F3C693;
      border: none;
      border-radius: 2rem;
      font-weight: 600;
      color: #000;
      cursor: pointer;
      transition: background 0.3s ease;
    }

    .submit-btn:hover {
      background: #f5b96d;
    }

    @media (max-width: 600px) {
      .form-box {
        padding: 2rem 1.5rem;
      }

      .toggle-btn {
        font-size: 0.9rem;
      }

      .submit-btn {
        font-size: 0.95rem;
      }
    }
  </style>
</head>
<body>
  {{>header}}

  <div class="form-box">
    <div class="button-box">
      <div id="btn"></div>
      <button type="button" class="toggle-btn" onclick="showLogin()" id="adminbtn">Register as User</button>
      <button type="button" class="toggle-btn" onclick="showRegister()" id="userbtn">Register as Admin</button>
    </div>

    <!-- User Registration -->
    <form id="login" class="active" action="/registration" method="post">
      <input type="text" class="input-field" placeholder="First Name" name="fname">
      <input type="text" class="input-field" placeholder="Last Name" name="lname">
      <input type="number" class="input-field" placeholder="Age" name="age">
      <input type="email" class="input-field" placeholder="Email" name="email">
      <input type="number" class="input-field" placeholder="Phone Number" name="phone">
      <input type="text" class="input-field" placeholder="Registration No" name="registrationNo">
      <input type="number" class="input-field" placeholder="Student ID" name="StudentId">
      <input type="text" class="input-field" placeholder="Department" name="Department">
      <input type="text" class="input-field" placeholder="Degree" name="Degree">
      <input type="password" class="input-field" placeholder="Password" name="password">
      <input type="password" class="input-field" placeholder="Confirm Password" name="cpassword">
      <input type="submit" class="submit-btn" value="Register">
    </form>

    <!-- Admin Registration -->
    <form id="register" action="/registeradmin" method="post">
      <input type="text" class="input-field" placeholder="First Name" name="fnamead">
      <input type="text" class="input-field" placeholder="Last Name" name="lnamead">
      <input type="number" class="input-field" placeholder="Age" name="agead">
      <input type="email" class="input-field" placeholder="Email" name="emailad">
      <input type="number" class="input-field" placeholder="Phone Number" name="phonead">
      <input type="password" class="input-field" placeholder="Password" name="passwordad">
      <input type="password" class="input-field" placeholder="Confirm Password" name="cpasswordad">
      <input type="submit" class="submit-btn" value="Register">
    </form>
  </div>

  <script>
    const loginForm = document.getElementById("login");
    const registerForm = document.getElementById("register");
    const btn = document.getElementById("btn");
    const adminBtn = document.getElementById("adminbtn");
    const userBtn = document.getElementById("userbtn");

    function showLogin() {
      loginForm.classList.add("active");
      registerForm.classList.remove("active");
      btn.style.left = "0%";
      adminBtn.style.color = "#000";
      userBtn.style.color = "white";
    }

    function showRegister() {
      loginForm.classList.remove("active");
      registerForm.classList.add("active");
      btn.style.left = "50%";
      userBtn.style.color = "#000";
      adminBtn.style.color = "white";
    }

    // Show user form by default
    showLogin();
  </script>
</body>
</html>
