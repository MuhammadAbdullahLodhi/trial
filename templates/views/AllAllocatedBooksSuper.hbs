<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Allocated Books</title>

  <!-- Bootstrap & DataTables -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/5.3.3/css/bootstrap.min.css" />
  <link rel="stylesheet" href="https://cdn.datatables.net/2.3.1/css/dataTables.bootstrap5.min.css" />
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />

  <style>
    body {
      background: linear-gradient(to right, #dbeafe, #e0f2fe);
      font-family: 'Poppins', sans-serif;
    }

    .page-title {
      padding: 8rem 1rem 1rem 1rem;
      background: #0d6efd;
      color: white;
      text-align: center;
    }

    .main {
      padding: 2rem;
    }

    .table-container {
      background: #fff;
      padding: 2rem;
      border-radius: 12px;
      box-shadow: 0 6px 25px rgba(0, 0, 0, 0.06);
      overflow-x: auto;
    }

    .table th {
      background-color: #0d6efd;
      color: #fff;
      vertical-align: middle;
    }

    .table td {
      vertical-align: middle;
    }
    .btn-reject{
      background-color:rgb(67, 165, 40);
    }

    @media (max-width: 768px) {
      .page-title {
        font-size: 2rem;
      }

      .table-container {
        padding: 1rem;
      }

      .table td,
      .table th {
        font-size: 0.875rem;
      }
    }
  </style>
</head>
<body>

  {{>SuperAdminNav}}
  

  <h1 class="page-title">All Allocated Books</h1>

  <div class="container-fluid main">
    <div class="table-container">
      <table id="example" class="table table-striped table-bordered table-hover w-100">
        <thead>
          <tr>
            <th>Student Reg-No</th>
            <th>Book Name</th>
            <th>ISBN</th>
            <th>Issue Date</th>
            <th>Return Date</th>
            <th>Fine for Late</th>
            <th>Days Late</th>
            <th>Return</th>

          </tr>
        </thead>
        <tbody>
          {{#each allocatedBooks}}
          <tr>
            <td>{{this.RegistrationNo}}</td>
            <td>{{this.Bookname}}</td>
            <td>{{this.ISBN}}</td>
            <td>{{this.IssueDate}}</td>
            <td>{{this.ReturnDate}}</td>
            <td>{{this.FineForLate}}</td>
            <td>{{this.lateDays}}</td>
            <td><button class="btn-reject">
                <a href="/return/{{this.RegistrationNo}}/{{this.ISBN}}" style="text-decoration: none; color: white; font-weight:600;">
                 Return
                </a>
              </button></td>
          </tr>
          {{/each}}
        </tbody>
      </table>
    </div>
  </div>

  <!-- Scripts -->
  <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
  <script src="https://cdn.datatables.net/2.3.1/js/dataTables.min.js"></script>
  <script src="https://cdn.datatables.net/2.3.1/js/dataTables.bootstrap5.min.js"></script>
  <script>
    document.addEventListener('DOMContentLoaded', function () {
      new DataTable('#example');
    });
  </script>
</body>
</html>
